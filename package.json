{
  "name": "weather-duck",
  "private": true,
  "version": "1.7.8",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "prebuild": "node scripts/bump-version.js",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "deploy": "npm run build && rsync -avz --delete dist/ root@yangruoji.com:/root/weather_duck && ssh root@yangruoji.com \"docker restart yangruoji-nginx\"",
    "deploy:dry": "npm run build && rsync -avz --delete --dry-run dist/ root@yangruoji.com:/root/weather_duck/"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.89.0",
    "@types/qrcode": "^1.5.6",
    "axios": "^1.13.2",
    "dayjs": "^1.11.19",
    "echarts": "^6.0.0",
    "qrcode": "^1.5.4",
    "rxjs": "^7.8.2",
    "tdesign-vue-next": "^1.17.7",
    "vue": "^3.5.26"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.3",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-pwa": "^1.2.0",
    "vue-tsc": "^3.2.1",
    "workbox-window": "^7.4.0"
  }
}
